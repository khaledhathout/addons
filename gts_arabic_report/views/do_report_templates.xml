<!--												<strong>-->
<!--													<span t-field="o.sale_id.opportunity_id.reference_number"/>-->
<!--												</strong>-->
<!--											</td>-->
										</tr>
								</tbody>
							</table>
							<div class="row" style="padding: 10px 0px 5px 0px;">
								<div class="col-12 text-right" style="font-weight: bold">
									:نحن <span t-esc="o.company_id.ar_name"/> قمنا بتوريد البضاعة
