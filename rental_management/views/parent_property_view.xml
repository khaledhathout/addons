<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="parent_property_form_view" model="ir.ui.view">
            <field name="name">parent.property.form.view</field>
            <field name="model">parent.property</field>
            <field name="arch" type="xml">
                <form string="Property">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title mb24">
                            <h1>
                                <field class="text-break" name="name" required="1"
                                       default_focus="1"
                                       placeholder="e.g. Silver Height"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <span class="o_form_label o_td_label" name="address_name">
                                    <b>Address</b>
                                </span>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options="{'no_open': True, 'no_quick_create': True}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options="{'no_open': True, 'no_quick_create': True}"/>
                                </div>
                            </group>
                            <group>
                                <field name="landlord_id" required="1"
                                       options="{'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="website"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Nearby Connectivity">
                                <h3 style="color:#714B67;">
                                    <strong>Nearby Connectivity</strong>
                                </h3>
                                <ul class="list-group list-group-horizontal-lg border-0">
                                    <li class="list-group-item border-0">
                                        <h1><img src="/rental_management/static/src/img/plane.svg" width="48px" height="48px" alt="Airport" /></h1>
                                        <div class="oe_title">
                                            <label for="airport"/>
                                            <h2 style="color:#00A09D;">
                                                <field name="airport"/>
                                            </h2>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0">
                                        <h1><img src="/rental_management/static/src/img/road.svg" width="48px" height="48px" alt="Highway" /></h1>
                                        <div class="oe_title">
                                            <label for="national_highway"/>
                                            <h2 style="color:#00A09D;">
                                                <field name="national_highway"/>
                                            </h2>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0">
                                        <h1><img src="/rental_management/static/src/img/railway.svg" width="48px" height="48px" alt="Metro" /></h1>
                                        <div class="oe_title">
                                            <label for="metro_station"/>
                                            <h2 style="color:#00A09D;">
                                                <field name="metro_station"/>
                                            </h2>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0">
                                        <h1><img src="/rental_management/static/src/img/building.svg" width="48px" height="48px" alt="City" /></h1>
                                        <div class="oe_title">
                                            <label for="metro_city"/>
                                            <h2 style="color:#00A09D;">
                                                <field name="metro_city"/>
                                            </h2>
                                        </div>
                                    </li>
                                </ul>
                            </page>
                            <page string="Amenities">
                                <h3 style="color:#714B67;">
                                    <strong>Amenities</strong>
                                </h3>
                                <field name="amenities_ids">
                                    <kanban>
                                        <field name="id"/>
                                        <field name="title"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click border border-info border-bottom"
                                                     style="width:230px;height:60px;">
                                                    <div style="width:40%;float:left;display:inline-block;">
                                                        <img alt="Avtar"
                                                             t-att-src="kanban_image('property.amenities','image',record.id.raw_value)"
                                                             class="rounded-circle"
                                                             style="width:50px;height:50px;"/>
                                                    </div>
                                                    <div style="width:60%;float:right;display:inline-block;">
                                                        <h5 style="color:#714B67;">
                                                            <strong>
                                                                <field name="title"/>
                                                            </strong>
                                                        </h5>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                            <page string="Facilities">
                                <h3 style="color:#714B67;">
                                    <strong>Facilities</strong>
                                </h3>
                                <field name="property_specification_ids">
                                    <kanban>
                                        <field name="id"/>
                                        <field name="title"/>
                                        <field name="description_line1"/>
                                        <field name="description_line2"/>
                                        <field name="description_line3"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click border border-info border-bottom"
                                                     style="width:350px;height:120px;">
                                                    <div style="width:40%;float:left;display:inline-block;">
                                                        <img alt="Avtar"
                                                             t-att-src="kanban_image('property.specification','image',record.id.raw_value)"
                                                             style="width:100px;height:100px;"
                                                             class="img-thumbnail-left"/>
                                                    </div>
                                                    <div style="width:60%;float:right;display:inline-block;">
                                                        <h4 style="color:#714B67;">
                                                            <strong>
                                                                <field name="title"/>
                                                            </strong>
                                                        </h4>
                                                        <h6>
                                                            <span>➸
                                                                <field name="description_line1"/>
                                                                <br/>➸
                                                                <field name="description_line2"/>
                                                                <br/>➸
                                                                <field name="description_line3"/>
                                                            </span>
                                                        </h6>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="parent_property_tree_view" model="ir.ui.view">
            <field name="name">parent.property.tree.view</field>
            <field name="model">parent.property</field>
            <field name="arch" type="xml">
                <tree string="Property">
                    <field name="name"/>
                    <field name="landlord_id"/>
                </tree>
            </field>
        </record>
        <record id="parent_property_search_view" model="ir.ui.view">
            <field name="name">parent.property.search.view</field>
            <field name="model">parent.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="landlord_id"/>
                </search>
            </field>
        </record>
        <record id="parent_property_action" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">parent.property</field>
            <field name="view_mode">tree,form,search</field>
        </record>
    </data>
</odoo>